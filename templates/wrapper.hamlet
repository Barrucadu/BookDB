<!--
Template vars:

 - title :: Text, the title
 - body :: HtmlUrl r, the body template to render within
-->
$doctype 5
<html>
  <head>
    <title>#{title}

    <link rel="stylesheet" href="@{Static "style.css"}" type="text/css">

    <script src="@{Static "vendor/jquery-1.9.1.min.js"}">
    <script src="@{Static "vendor/jquery-ui-1.10.2.js"}">
    <script src="@{Static "vendor/Chart-1.0.2.min.js"}">
    <script src="@{Static "script.js"}">

  <body>
    <div .page>
      <header>
        <h1>#{title}

        <nav>
          <ul>
            <li>
              <a href="@{List}">List
            <li>
              <a href="@{Add}">Add
            <li>
              <a href="@{Search}">Search
            <li>
              <a href="@{Stats}">Stats

      ^{body}

      <footer>
        <a href="https://github.com/barrucadu/bookdb">Github
